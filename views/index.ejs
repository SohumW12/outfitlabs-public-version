            height: 100px;
            object-fit: contain;
            margin-bottom: 0.5rem;
        }

        .item-meta {
            font-size: 0.75rem;
        }

        .styling-tips {
            background-color: rgba(139, 92, 246, 0.1);
            padding: 1rem;
            border-radius: var(--radius);
            margin-top: 1rem;
            font-size: 0.875rem;
